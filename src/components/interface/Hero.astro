<section
    class="relative h-dvh overflow-hidden bg-blue-950 pt-12 font-sans md:pt-20"
>
    <video
        class="absolute right-1/2 bottom-1/2 min-w-full min-h-full max-w-none w-auto h-auto translate-x-1/2 translate-y-1/2 z-10 brightness-90 blur-[1px] md:blur-none md:h-[600px] object-cover saturate-150 opacity-60 [mask-image:radial-gradient(ellipse_100%_95%_at_50%_50%,#000_1%,transparent_60%)]"
